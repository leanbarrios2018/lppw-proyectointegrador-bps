<div class="card mx-auto col-12 mt-3">
    <div class="card-header titulos">
        Lista de pedidos 
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>NÂ° de Pedido</th>  
                    <th>Nombre</th>
                    <th>Modelo</th>
                    <th>Cantidad</th>
                    <th>Fecha de pedido</th>
                    <th>Estado</th>
                    {{#if userLogged.gerente}}<th>MODIFICAR</th>{{/if}} 
                </tr>
            </thead>
            <tbody>
                {{#each respuesta}}
                <tr>
                    <td scope="col">{{id}}</td>
                    <td scope="col">{{nombre}}</td>
                    <td scope="col">{{modelo}}</td>
                    <td scope="col">{{cantidad}}</td>
                    <td scope="col">{{fecha_creacion}}</td>
                    <td scope="col">{{estado}}</td>
                    {{#if userLogged.gerente}}<td><a class="btn btn-primary" href="/pedido/mod/{{#if respuesta}}{{id}}{{/if}}">Modificar</a></td>{{/if}}     <!-- BOTON MODIFICAR USUARIO-->
                </tr>
               {{/each}}
            </tbody>
        </table>
    </div>
</div>

