<div class="container rounded bg-light mt-4 col-8">
    <div class=" mt-3">
        <h3 class="mx-auto titulos pt-2" >Crear pedido de Repuestos</h3>
    </div>
    <form class="m-4 pb-3" action="" method="post" id="crear_pedido_repuesto_existe">

      <div class=" mb-3">
        <label for="repuesto" class="form-label">Repuesto</label>
          <select class="form-select" name="repuesto" id="repuesto">
              <option value="" selected disabled></option>
              {{#each respuesta}}
              <option value={{id_repuesto}}>{{nombre}}--{{modelo}}</option>
              {{/each}}
          </select>
        <div class="feedback-invalid"></div>
     </div>

    <div class="mb-3">
      <label class="form-label" for="cantidad">Cantidad</label>
      <input type="number" name="cantidad" class="form-control" id="cantidad" min="1" max="9999" required>
      <div class="feedback-invalid"></div>
    </div>

    <div class="row">
      <div class="col-6">
        <button type="submit" class="btn btn-primary">Crear Pedido</button>
      </div>
      <div class="col-6">
        <a class="btn btn-secondary" href="/stock">Cancelar</a>
      </div>
    </div>
  
  </form>
</div>
