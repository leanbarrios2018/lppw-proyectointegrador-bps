{{#each error_orden}}
    <div class="alert alert-warning alert-dismissible fade show mt-4" role="alert">
        {{text}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/each}} 


<div class="card mx-auto col-12 mt-3">
    <div class="card-header titulos">
        Lista de todos las Ordenes sin Asignar
    </div>
    <div class="card-body">

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">fecha de ingreso</th>
            <th scope="col">Recepcionista </th>
            <th scope="col">Marca</th>
            <th scope="col">Modelo</th>
            <th scope="col">Descripcion de Falla</th>
            <th scope="col">Datos del cliente</th>
            <th scope="col">AGREGAR / TOMAR</th>    <!-- cargar = tomar orden / asignar tecnico-->
          </tr>
        </thead>
        <tbody id="tbody_ordenes_trabajo">
          {{#each respuesta}}
            <tr>
                <td >{{fecha_creacion}}</td>
                <td >{{fk_recepcionista}}</td>
                <td>{{marca}}</td>
                <td>{{modelo}}</td> 
                <td>{{descripcion_falla}}</td>
                <td >{{fk_cliente}}</td>         
                <td><a data-bs-toggle="modal" data-bs-target="#agregar_tec" href="">Asignar/Tomar</a></td> <!-- cargar = tomar orden / asignar tecnico (se requiere sesion) -->
            </tr>
          {{/each}}
          
        </tbody>
      </table>
  </div>
</div>

<!-- BOTON ASIGNAR TECNICO-->

<div class="modal" id="agregar_tec" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Asignar Tecnico</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <form action="" method="post" id="agregar_tecnico">

          <div class="mb-3">
            <label for="id_asignar" class="form-label">ID</label>
            <input type="number" class="form-control" name="id_asignar" id="id_asignar" disabled>

          </div>
          
          <div class="row g-3">
            <div class="mb-3 col">
                <label for="localidad" class="form-label">Modelo</label>
                <input type="text" name="localidad" class="form-control" id="localidad" disabled>
            </div>

            <div class="mb-3 col">
                <label for="marca" class="form-label">Marca</label>
                <input type="text" name="marca" class="form-control" id="marca" disabled>
            </div>
          </div>
            
          <textarea class="form-control" name="" id="" cols="80" rows="10" placeholder="Descripcion del repuesto (opcional) " disabled></textarea><br>

          <div class="mb-3">

            <label for="id_asignar" class="form-label">TECNICO</label>   <!-- CARGAR CON LOS TECNICOS ACTIVOS-->
            <select name="id_asignar" id="id_asignar" class="form-select">
              <option value="" selected disabled></option>
            </select>

          </div>

          <button type="submit" class="btn btn-primary">Guardar Cambios</button>

        </form>
      </div>
    </div>
  </div>
</div>