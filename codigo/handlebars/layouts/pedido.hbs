<div class="container rounded bg-light mt-4">
    <div class=" mt-3">
        <h3 class="mx-auto titulos" >Aceptar/Rechazar Pedido</h3>
    </div>
    <form action="/pedido/mod" method="post">
        <div class="row mt-3">
            <div class="col mb-3">
                <input id="id_repuesto" type="hidden" name="repuesto" value="{{#if respuesta}}{{id}}{{/if}}">

                <label for="repuesto_disable" class="form-label">Nombre</label>
                <input type="number" class="form-control" value="{{#if respuesta}}{{nombre}}{{/if}}" disabled>
            </div>
            <div class="col mb-3">
                <label for="repuesto_disable" class="form-label">Modelo</label>
                <input type="number" class="form-control" value="{{#if respuesta}}{{modelo}}{{/if}}" disabled>
            </div>
        </div>

        <div class="mb-3">
            <select class="form-select" name="estado">
                <option value="" selected disabled></option>
                <option value="rechazado">Recazado</option>
                <option value="aceptado">Aceptado</option>
            </select>
        </div>
        <div class="row mt-3">
            <div class="col-6 mb-3">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
            <div class="col-6 mb-3">
                <a class="btn btn-primary" href="/pedido/lista">Cancelar</a>
            </div>
        </div>
    </form>
</div>