<div class="card col-10 p-2 mx-auto m-3">

  <form class="d-flex" role="search">
    <input class="form-control me-2" type="search" placeholder="Ingrese el ID" aria-label="Search">
    <button class="btn btn-outline-success" type="submit">Buscar</button>
  </form>
</div>

<div class="card mx-auto col-12 m-3">

    <div class="card-header titulos">
        Mis ordenes de trabajo sin Completar
    </div>
    <div class="card-body">

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Fecha de Ingreso</th>
          <th>fecha de Inicio</th>
          <th>Cliente</th>
          <th>Recepcionista</th>  
          <th>Marca</th>
          <th>Modelo</th>
          <th>Estado</th>
          <th>Descripcion de la Falla</th>
          <th>Repuestos usados</th>
          <th>Modificar</th>    
        </tr>
      </thead>
      <tbody id="tbody_ordenes_trabajo">
        {{#each respuesta}}
        <tr >
            <td>{{fecha_creacion}}</td>
            <td>{{fecha_inicio}}</td>
            <td>{{fk_cliente}}</td>
            <td>{{fk_recepcionista}}</td>
            <td>{{marca}}</td>
            <td>{{modelo}}</td>
            <td>{{nombre}}</td>
            <td>{{descripcion_falla}}</td>
            <th>{{repuestos}}</th>
            <td><a href="orden/{{id_orden}}">Modificar</a></td>     <!-- BOTON MODIFICAR ORDEN-->

        </tr>
        {{/each}}

      </tbody>
    </table>

    </div>
</div>



<div class="modal" id="modificar_orden_tecnico" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modificar Orden</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <form action="" method="post" id="form_crear_orden">

            <div class="mb-3">
                <label for="nombre" class="form-label">ID Equipo</label>
                <input type="text" class="form-control" name="nombre" id="nombre" disabled>
            </div>

          
            <div class="row g-3">
                <div class="mb-3 col">
                    <label for="localidad" class="form-label">Modelo</label>
                    <input type="text" name="localidad" class="form-control" id="localidad" disabled>
                </div>

                <div class="mb-3 col">
                    <label for="marca" class="form-label">Marca</label>
                    <input type="text" name="marca" class="form-control" id="marca" disabled>
                </div> 
            </div>

            <div class="row g-3">
              <label for="repuesto" class="form-label">Elegir repuesto usado</label>
              <select class="form-select" name="repuesto" id="repuesto">
                <option value="" selected disabled ></option>
              </select>
            
            <input type="button" id="agregar_repuesto" class="btn btn-primary" value="Agregar otro repuesto"></input>
            </div>
            
            <div class="row g-3 mt-1">

              <textarea class="form-control" name="" id="" cols="80" rows="10" placeholder="Datos importantes (opcional) "></textarea>
                
            </div>
            

            <div class="row g-3 mt-1">
              <label for="marca" class="form-label">Cambiar estado de la orden</label>
              <select class="form-select" name="repuesto" id="repuesto" required>
                <option value="" selected disabled ></option>

              </select>
            
            </div>

            <button type="submit" class=" mt-2 btn btn-primary">Guardar Cambios</button>

          </form>
      </div>
    </div>
  </div>
</div>