<div class="card mx-auto col-7 m-3">
    <div class="card-header titulos">
        Modificar Orden
    </div>
    <div class="card-body">
        <form  action="" method="post" id="form_modificar_orden">

            <div class="mb-3">
                <label for="nombre" class="form-label">ORDEN NÂ°</label>
                {{#each respuesta}}
                    <input type="text" class="form-control"  id="nombre" disabled value="{{id_orden}}">
                    <input type="hidden" name="id_orden" value="{{id_orden}}">
                {{/each}}
            </div>

            <div class="mb-3">
                <label for="nombre" class="form-label">Descripcion Falla</label>
                {{#each respuesta}}
                    <textarea class="form-control" name="" id="" cols="80" rows="5" placeholder="Datos importantes (opcional) " disabled>{{descripcion_falla}}</textarea>
                {{/each}}
            </div>
              <div class="mt-3">
                {{#if respuesta2}}
                    <label for="repuesto2" class="form-label">Repuestos en uso</label>
                    <select class="form-select" multiple="multiple" id="repuesto2" disabled>
                    {{#each respuesta2}}
                          <option value="{{id_repuesto}}"  selected >{{nombre}} - {{modelo}} - {{marca}}</option>
                    {{/each}}
                  </select>
                  {{/if}}
            </div>
                
            <div class="row g-3">
                <div class="col mt-3">
                    <label for="repuesto" class="form-label">Elegir repuesto/s usado/s</label>
                    <select class="form-select" name="repuesto"  id="repuesto">
                      <option value=""  disabled selected></option>
                      {{#each datos}}
                          <option value="{{id_repuesto}}">{{nombre}} - {{modelo}} - {{marca}}</option>
                      {{/each}}
                    </select>
                </div>
                <div class="col mt-3">
                  <label for="cantidad" id="label_cantidad" class="form-label">Cantidad</label>
                  <input type="number" class="form-control" name="cantidad" id="cantidad" required min="1" value="1" max="1000">
                </div>
            </div>

            <div class=" mt-3">
              <textarea class="form-control" name="datos_op" id="datos_op" cols="80" rows="10" maxlength="300" minlength="1" placeholder="Datos importantes (opcional) ">{{#each respuesta}}{{datos_importantes}}{{/each}}</textarea> 
            </div>
            

            <div class="mt-3">
              <label for="estado" class="form-label">Cambiar estado de la orden.</label>
              <select class="form-select" name="estado" id="estado" required>
                <option value="{{#each respuesta}}{{nombre}}{{/each}}" selected>{{#each respuesta}}{{nombre}}{{/each}}</option>

                {{#each lista_enviar}}
                     <option value="{{estado}}">{{estado}}</option>
                {{/each}}
              </select>
            
            </div>
            <div class="row g-3">
                <div class="mt-3 col-4">
                   <button type="submit" class=" mt-2 btn btn-primary">Guardar Cambios</button>
              </div>
                <div class="mt-3 col-4">
                  <a class="btn mt-2  btn-danger" href="/tecnico/misordenes">Cancelar</a>
                   
              </div>
                <div class="mt-3 col-4">
                   <a class="btn mt-2  btn-secondary" href="/tecnico/orden/{{#each respuesta}}{{id_orden}}{{/each}}">Restablecer</a>
              </div>
            </div>
        </form>
    </div>
</div>

<script src="../../modificar_orden.js"></script>