<!-- BOTON DETALLES FACTURA-->

<div class="modal" id="detalles_factura" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Detalles Factura</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <form action="" method="post" id="detalles_factura">

          <div class="row g-3">
             <div class="mb-3 col">
                <label for="id_equipo" class="form-label">ID del Equipo</label>
                <input type="text" class="form-control" name="id_equipo" id="id_equipo" disabled>
            </div>

            <div class="mb-3 col" >
                <label for="dni_cliente" class="form-label">DNI Cliente</label>
                <input type="text" class="form-control" name="dni_cliente" id="dni_cliente" disabled>
            </div>
          </div>

            <div class="row g-3">
                <div class="mb-3 col">
                    <label for="fecha_ingreso" class="form-label">Fecha de Ingreso</label>
                    <input type="date" name="fecha_ingreso" class="form-control" id="fecha_ingreso" disabled>
                </div>
                <div class="mb-3 col">
                    <label for="fecha_retiro" class="form-label">Fecha de Retiro</label>
                    <input type="date" name="fecha_retiro" class="form-control" id="fecha_retiro" disabled>
                </div>
            </div>
           
          
            <div class="row g-3">
                <div class="mb-3 col">
                    <label for="localidad" class="form-label">Modelo</label>
                    <input type="text" name="localidad" class="form-control" id="localidad" disabled>
                </div>

                <div class="mb-3 col">
                    <label for="marca" class="form-label">Marca</label>
                    <input type="text" name="marca" class="form-control" id="marca" disabled>
                </div>
            </div>


            <div class="row g-3">
                <label class="form-label" for="lista_repuestos">Lista de repuestos usados</label>
                <textarea class="form-control" name="lista_repuestos" id="lista_repuestos" cols="30" rows="10" ></textarea>
            </div>
            

            <div class="row g-3">
                <div class="mb-3 col" >
                    <label for="pago" class="form-label">Pago del Cliente</label>
                    <input type="number" name="pago" class="form-control" id="pago" required min="1" disabled>
                </div>

            </div>
            <div class="row g-3">
                <div class="mb-3 col" >
                    <button type="submit" class="btn btn-danger">Eliminar Factura</button>
                </div>
                <div class="mb-3 col" >
                    <button type="button" class="btn btn-primary "  data-bs-dismiss="modal">Cerrar</button>
                </div>   
            </div>
        </form>
      </div>
    </div>
  </div>
</div>
