<div class="container rounded bg-light mt-4">
    <div class=" mt-3">
        <h3 class="mx-auto titulos" >Crear pedido de Repuestos</h3>
    </div>
    <form action="" method="post" id="crear_pedido_repuesto_existe">

      <div class=" mb-3">
        <label for="repuesto" class="form-label">Repuesto</label>
          <select class="form-select" name="repuesto" id="repuesto">
              <option value="" selected disabled></option>
              {{#each respeusta}}
              <option value={{id_repuesto}}>{{nombre}}--{{modelo}}</option>
              {{/each}}
          </select>
        <div class="feedback-invalid"></div>
     </div>

    <div class="mb-3">
      <label class="form-label" for="cantidad">Cantidad</label>
      <input type="number" name="cantidad" class="form-control" id="cantidad" min="1" max="9999" required>
      <div class="feedback-invalid"></div>
    </div>

    <button type="submit" class="btn btn-primary">Crear Pedido</button>
  </form>
  
</div>
