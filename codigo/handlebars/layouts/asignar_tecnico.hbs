{{#if error_orden}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{text}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/if}}

<div class="card mx-auto col-7 m-3">
    <div class="card-header titulos">
        Asignar Tecnico
    </div>
    <div class="card-body">

        <form action="/asignar" method="POST" id="form_asignar">
            <input type="hidden" name="id" value="{{#if respuesta}}{{id_orden}}{{/if}}">

            <div class="mb-3">
                <label for="nombre" class="form-label">Orden NÂ°</label>
                <input type="text" class="form-control"  id="nombre" value="{{#if respuesta}}{{id_orden}}{{/if}}" disabled>
                <div class="invalid-feedback">llalala</div>
            </div>

            <div class="mb-3 col">
                <textarea  id="datos" cols="30" rows="10" placeholder="Datos del equipo" disabled>{{#if respuesta}}{{datos_importantes}}{{/if}}</textarea>
            </div>
            <div class="mb-3 col">
                <textarea  id="descripcion" cols="30" rows="10" placeholder="Descripcion de la falla" disabled>{{#if respuesta}}{{descripcion_falla}}{{/if}}</textarea>
            </div>

            <div class="mt-3">
                <label for="repuesto2" class="form-label">Tecnicos</label>
                <select class="form-select" name="tecnico" id="repuesto" required>
                    <option value=""select disabled></option>
                    {{#each respuesta2}}
                        <option value="{{dni}}">{{dni}}--{{nombrecompleto}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="row g-3">
                <div class="col m-3">
                    <button type="submit" class="btn btn-primary">Asignar</button>
                </div>
                <div class="col m-3">
                    <a class="btn btn-danger" href="/gerente">Cancelar</a>
                </div>
            </div>
        </form>

    </div>
</div>
