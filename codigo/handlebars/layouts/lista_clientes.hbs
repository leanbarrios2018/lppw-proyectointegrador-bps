<div class="card mx-auto col-12 mt-3">
    <div class="card-header titulos">
        Lista de todos los usuarios
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>DNI</th>  
                    <th>NOMBRE COMPLETO</th>
                    <th>CELULAR</th>
                    <th>DIRECCION</th>
                    <th>LOCALIDAD</th>
                    <th>EMAIL</th>
                    <th>MODIFICAR</th>    
                </tr>
            </thead>
            <tbody id="">
                {{#each respuesta}}
                <tr>
                    <td >{{dni}}</td>
                    <td >{{nombrecompleto}}</td>
                    <td >{{celular}}</td>
                    <td >{{direccion}}</td>
                    <td >{{localidad}}</td>
                    <td >{{email}}</td>
                    <td><a class="btn btn-primary" href="clientes/mod/{{dni}}">Modificar</a></td>     <!-- BOTON MODIFICAR USUARIO-->
                </tr>
               {{/each}}
            </tbody>
        </table>
    </div>
</div>